<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.sbt_markin_aa.trelolo">

    <permission android:name="com.example.sbt_markin_aa.trelolo.model.database.providers.LoginTableContentProvider.READ_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presenter.activities.LoginPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.example.sbt_markin_aa.trelolo.model.database.providers.LoginTableContentProvider"
            android:name=".model.database.providers.LoginTableContentProvider"
            android:exported="false"
            android:writePermission="com.example.sbt_markin_aa.trelolo.database.providers.LoginTableContentProvider.READ_DATABASE">
        </provider>

    </application>

</manifest>